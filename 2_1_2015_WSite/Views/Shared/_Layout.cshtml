<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shelby Murphy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        <link href="~/Content/DataTables-1.10.4/css/jquery.dataTables.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-datepicker.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-static-top" style="margin-top: 45px">
        <div class="container">
            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Shelby Murphy", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Appointment/">Appointments</a></li>
                                <li><a href="/Appointment/CreateUpdate">-- Request Apppointment</a></li>
                                <li class="divider"></li>
                                <li><a href="/Communication/">Communications</a></li>
                                <li><a href="/Communication/Box?box=Inbox">-- Inbox</a></li>
                                <li><a href="/Communication/Box?box=Sent">-- Sent</a></li>
                                <li><a href="/Communication/Box?box=Drafts">-- Drafts</a></li>
                                <li><a href="/Communication/Create">-- Create</a></li>
                                <li class="divider"></li>
                                <li><a href="/User/">Users</a></li>
                            </ul>
                        </li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Client"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">My Dashboard<span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/Appointment/">Appointments</a></li>
                                <li><a href="/Appointment/CreateUpdate">-- Request Apppointment</a></li>                            
                                <li class="divider"></li>
                                <li><a href="/Communication/">Communications</a></li>
                                <li><a href="/Communication/Box?box=Inbox">-- Inbox</a></li>
                                <li><a href="/Communication/Box?box=Sent">-- Sent</a></li>  
                                <li><a href="/Communication/Box?box=Drafts">-- Drafts</a></li>
                                <li><a href="/Communication/Create">-- Create</a></li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Shelby L. Murphy</p>
        </footer>
    </div>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery-ui-1.11.2.js"></script>
    <script src="~/Scripts/jquery.dataTables.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/bootstrap-datepicker.js"></script>
    <script src="~/App/app.js"></script>
    <script src="~/App/controllers/BlogController.js"></script>
    <script src="~/App/services/BlogService.js"></script>
</body>
</html>
