@model _2_1_2015_WSite.Models.CommunicationViewModel
@{
    ViewBag.Title = "Send";
}

<div class="container">
    <div class="row clearfix">
        <center>
            <div class=" box box-info col-md-12" style="padding: 15px; width: 40%">
                <h2>Send Message</h2>
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        @Html.LabelFor(m => m.Message)
                        @Html.Raw(Model.Message)
                    </div>


                    <div class="form-group">
                        @Html.LabelFor(m => m.SendToId)
                        @Html.DropDownListFor(m => m.SendToId, new SelectList(@Model.Recipients, "UserId", "DisplayName"), "--Select Recipient--", new { @class = "form-control" })
                    </div>

                    <input type="hidden" value="@Model.CommunicationId" name="commId" />
                    <input type="submit" class="btn btn-info" value="Send" />
                }

            </div>
        </center>
  

    </div>
    
</div>
